<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <CheckBox
        android:id="@+id/tv_hook_result"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layoutDirection="rtl"
        android:layout_margin="?dialogPreferredPadding"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.helper.widget.Flow
        android:layout_marginTop="?dialogPreferredPadding"
        android:id="@+id/flow"
        app:constraint_referenced_ids="sw_open_dy,sw_open_xyjmh"
        app:layout_constraintTop_toBottomOf="@id/tv_hook_result"
        app:layout_constraintStart_toStartOf="@id/tv_hook_result"
        app:layout_constraintEnd_toEndOf="@id/tv_hook_result"
        android:layout_width="0dp"
        app:flow_wrapMode="chain"
        app:flow_horizontalStyle="spread_inside"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_open_xyjmh"
        android:text="开启小妖精美化hook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_open_dy"
        android:text="开启抖音hook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>